// decimal to binary 

#include <iostream>
using namespace std;

int bin_deci(int num){
    int ans=0;
    int pow=1;
    while(num>0){
    int rem;
    rem=num%2;
    num=num/2;
    ans=ans+(rem*pow);
    pow=pow*10;
}
return ans;
}
int main(){
    int a;
    cout<<"enter the decimal number:";
    cin>>a;
    cout<<"binary representation:"<<bin_deci(a);
    return 0;
}
