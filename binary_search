#include<iostream>
using namespace std;
int binarySearch(int arr[],int size,int key){
    int start=0;
    int end=size-1;
    int mid=(start+end)/2;
    while(start<=end){
        if(arr[mid] == key){
            return mid;
        }
        if(arr[mid]>key){
             end=mid-1;
        }
        else{
             start=mid+1;
        }
        mid=(start+end)/2;
    }
      return -1;
}
int main(){
    int arr1[8]={1,3,5,9,13,15,18,20};
    int arr2[7]={7,21,44,67,69,88,90};
    int index=binarySearch(arr1,8,19);
    cout<<"The index of 18 is:"<<index<<endl;
    int index2=binarySearch(arr2,7,21);
    cout<<"The index of 21 is:"<<index2;

    return 0;
}
