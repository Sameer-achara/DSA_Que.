#include<iostream>
using namespace std;
int insertion(int arr[],int size){
    for(int i=1;i<=size-1;i++){
        int temp=arr[i];
        int j=i-1;
        for(;j>=0;j--){
            if(arr[j]>temp){
                arr[j+1]=arr[j];
            }
            else{
                break;
            }            
        }
        arr[j+1]=temp;
    }
}
int main(){
    int arr[7]={2,5,7,8,9,2,4};
    insertion(arr, 7);
    cout << "Sorted Array is: ";
    for (int i = 0; i < 7; i++) {
        cout << arr[i] << " ";
    }
    return 0;
}
