#include<iostream>
using namespace std;
int peak(int arr[],int size){
    int start=0;
    int end=size-1;
    while(start<end){
        int mid=(start+end)/2;
        if(arr[mid-1]<arr[mid] && arr[mid]<arr[mid+1]){
            start=mid+1;
        }
        else if(arr[mid]<arr[mid-1] && arr[mid]>arr[mid+1]){
            end=mid-1;
        }
        else{
             return mid;
        }
    }
    return start;
}
int main(){
    int sam[7]={1,2,3,4,5,6,7};
    cout<<"The Peak Element index is:"<<peak(sam,7);
    return 0;
}
