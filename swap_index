#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter the size of an array:";
    cin>>n;
    int arr[n];
    cout<<"array before swapping:";
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    for(int i=0;i<n;i+=2){
    int temp;
    temp=arr[i];
    arr[i]=arr[i+1];
    arr[i+1]=temp;
    }
    cout<<"array after the swapping:";
    for(int i=0;i<n;i++){
    cout<<arr[i]<<" ";
}
    return 0;
}
